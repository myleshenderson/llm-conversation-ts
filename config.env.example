# LLM Conversation Configuration
# Copy this file to config.env and fill in your actual API keys

# Required: API Keys
OPENAI_API_KEY="sk-your-actual-openai-key-here"
ANTHROPIC_API_KEY="sk-ant-your-actual-anthropic-key-here"

# Model Configuration
OPENAI_MODEL="gpt-4"
ANTHROPIC_MODEL="claude-3-5-sonnet-20241022"

# API Base URLs
OPENAI_BASE_URL="https://api.openai.com/v1"
ANTHROPIC_BASE_URL="https://api.anthropic.com/v1"

# Conversation Settings
CONVERSATION_TOPIC="Discuss the future of artificial intelligence"
MAX_TURNS="10"
DELAY_BETWEEN_MESSAGES="2"

# Optional Settings
LOG_LEVEL="INFO"

# Upload Settings (Optional)
UPLOAD_ENABLED="true"
UPLOAD_API_URL="https://llm-conversations.vercel.app/api/conversations"
AUTO_UPLOAD="true"
UPLOAD_MAX_RETRIES="3"
UPLOAD_RETRY_DELAY="1000"

# Analysis Settings (Optional)
ANALYSIS_ENABLED="true"
ANALYSIS_MODEL="gpt-4o-mini"
ANALYSIS_HOOK_THRESHOLD="6"
ANALYSIS_FEATURE_THRESHOLD="8"
